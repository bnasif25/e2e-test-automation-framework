{
  "name": "e2e-test-automation-framework",
  "version": "1.0.0",
  "description": "Enterprise-grade test automation framework for saucedemo.com",
  "type": "module",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test --project=chromium,firefox,webkit",
    "test:api": "npx playwright test --grep @api",
    "test:performance": "k6 run src/tests/performance/load-test.js",
    "merge-reports": "npx playwright merge-reports --reporter html ./blob-reports",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "k6": "^0.0.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0",
    "axios": "^1.6.0",
    "@faker-js/faker": "^8.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  }
}
